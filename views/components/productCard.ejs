<article class="card" style="width: 18rem;">
    <img src="<%= product.avatar %>" class="card-img-top" alt="<%= product.name %>" />
    <div class="card-body">
        <h5 class="card-title">
            <%= product.name %>
        </h5>
        <p class="card-text">
            <%= product.price %>
        </p>
        <a href="/products/<%= product._id %>" class="btn btn-primary">Open</a>
    </div>
</article>